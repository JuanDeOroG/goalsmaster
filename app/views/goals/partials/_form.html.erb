<% content_for "head" do %>
<style>
    .card {
    border-radius: 10px; /* Bordes redondeados */
  }
</style>
<% end %>

<%= form_with(model: goal, url: goal.new_record? ? goals_path : goal_path(goal), method: goal.new_record? ? :post : :patch, local: true) do |f| %>
    <%= f.label :title, "Goal Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Travel to France", required: true %>

    <%= f.label :description, "Goal description (it's optional)", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", placeholder: "Write the description here", rows: 5 %>

    <%= f.label :limit_time, "Limit date (it's optional)", class: "form-label" %>
    <%= f.date_field :limit_time, class: "form-control", min: Date.today %>

  <div class="text-center">
    <%= f.submit goal.new_record? ? "Create" : "Update", class: "btn btn-round bg-gradient-info btn-lg w-100 mt-4 mb-0" %>
  </div>
<% end %>
