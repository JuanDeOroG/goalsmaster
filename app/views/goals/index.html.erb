<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
          <h6>Goals</h6>
          <!-- Botón para abrir el modal de creación -->
          <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#modalCreate">
            Create Goal
          </button>
        </div>
        <div class="container">
          <% if @goals.present? %>
          <div class="row">
            <% @goals.each do |goal| %>
              <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                  <div class="card-body">
                    <h5 class="card-title text-center">
                      <%= goal.title %>
                    </h5>
                    <div class="d-flex justify-content-between">
                      <!-- Button to edit -->
                      <%= button_tag "Edit" , type: "button" , class: "btn bg-gradient-info" , data: {
                        bs_toggle: "modal" , bs_target: "#modalEdit" , goal: goal.to_json } %>
                        <!-- Button to delete -->
                        <%= button_tag "Delete" , type: "button" , class: "btn bg-gradient-danger" , data: {
                          bs_toggle: "modal" , bs_target: "#confirmDeleteModal" } %>

                          <!-- Button to see tasks assigned to a Goal -->
                          <%= button_tag "Tasks" , type: "button" , class: "btn bg-gradient-primary" ,
                            data: { bs_toggle: "modal" , bs_target: "#permissionsAssignedModal"} %>

                            <!-- Modal to delete -->
                            <%= render "goals/partials/confirmDeleteModal" , goal: goal %>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>

                <%= paginate @goals, class: "pagination pagination-primary" %>

          </div>
          <% else %>
            <div class="alert alert-info">
              <p class="mb-0" style="color: white; text-align: center;">You have not created any goals yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal to create -->
<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalCreateLabel">Create Goal</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'goals/partials/form' , goal: @goal %>
      </div>
    </div>
  </div>
</div>

<!-- Modal to edit -->
<div class="modal fade" id="modalEdit" tabindex="-1" aria-labelledby="modalEditLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditLabel">Edit Goal</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="editModalBody">
        <!-- Contenido cargado dinámicamente con fetch -->
      </div>
    </div>
  </div>
</div>


<% content_for :javascript do %>

  <script>

    function chargeEditForm() {
      const editModal = document.getElementById("modalEdit");

      editModal.addEventListener("show.bs.modal", function (event) {
        const button = event.relatedTarget;
        const data = JSON.parse(button.getAttribute("data-goal"));

        fetch(`/goals/${data.id}/edit`)
          .then(response => response.text())
          .then(html => {
            const modalBody = editModal.querySelector("#editModalBody");
            modalBody.innerHTML = html;
          });
      });
    }

    document.addEventListener("DOMContentLoaded", function () {
      chargeEditForm();
    });

  </script>

<% end %>