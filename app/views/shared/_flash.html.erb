<% content_for "head" do %>
    <style>
        .alert-text{color:white}
    </style>
<% end %>

<% if alert.present? %>
<div class="alert alert-info alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x m-3" role="alert">
    <span class="alert-text"> <%= alert %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% end %>

<% if notice.present? %>
<div class="alert alert-warning alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x m-3" role="alert">
    <span class="alert-text"> <%= notice %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% end %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
