<div class="modal fade" id="permissionsAssignedModal" tabindex="-1" role="dialog"
  aria-labelledby="permissionsAssignedModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalScrollableTitle">TÃ­tulo del Modal</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="permissionsAssignedBody">
        <%= form_with(url: "/updateRolePermissions", method: :post, local: true) do |f| %>
          <% permissions.each do |permission| %>
            <label for="permission_<%= permission.id %>"><%= permission.name %></label>
            <%= check_box_tag "permissions[]", permission.id, false, id: permission.id %>
          <% end %>
          <input type="hidden" name="id" id="roleIdInput" value="">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Cerrar</button>
        <%= f.submit "Save Permissions", class: "btn bg-gradient-primary" %>
        <% end %>

      </div>
    </div>
  </div>
</div>