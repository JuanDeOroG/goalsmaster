<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
          <h6>Roles</h6>
          <!-- BotÃ³n alineado a la derecha -->
          <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#modal-form">
            Create Role
          </button>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <!-- Contenido de la tarjeta -->
          <% @roles.each do |roles| %>
            <%= roles.name %>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="col-md-4">
  <div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
      <div class="modal-content">
        <div class="modal-body p-0">
          <div class="card card-plain">
            <div class="card-header pb-0 text-left">
              <h3 class="font-weight-bolder text-info text-gradient">Create</h3>
              <p class="mb-0">Enter Role name to create</p>
            </div>
            <div class="card-body">
              <%= form_with url: roles_path, local: true do |form| %>
                <%= form.label :name %>
                  <div class="input-group mb-3">
                    <%= form.text_field :name, class: "form-control" , placeholder: "Site Administrator" , required:
                      true %>
                  </div>
                  <div class="text-center">
                    <%= form.submit "Create" , class: "btn btn-round bg-gradient-info btn-lg w-100 mt-4 mb-0" %>
                  </div>
                  <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>